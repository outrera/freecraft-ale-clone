;;        FreeCraft Map - Single player campaign

(briefing 'type 'wc2
    'title "II. Dunath Outpost"
    'background "campaigns/alliance/interface/introscreen1.png"
    'text "campaigns/alliance/level02a.txt"
    ;'voice "campaigns/alliance/level02a-briefing.wav"
    'objective "- Build a Barracks"
    'objective "- Train 5 Footmen"
    'objective "- Arthor Literios must not die")

(add-trigger (lambda ()
			 	(and (if-unit 'this '>= 1 'unit-alliance-barracks) (if-unit 'this '>= 5 'unit-footman))
			 )
  (lambda () (action-victory)))
(add-trigger (lambda () (if-unit 'this '<= 0 'unit-arthor-literios))
  (lambda () (action-defeat)))

